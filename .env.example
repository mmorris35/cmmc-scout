# Auth0 Configuration (Optional - demo works without it)
# For CLI demo: Only AUTH0_DOMAIN and AUTH0_CLIENT_ID are needed
# Get these from Auth0 Dashboard after creating a Native application
# See AUTH0_SETUP.md for detailed setup instructions
AUTH0_DOMAIN=dev-xxx.us.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=                     # Not needed for device flow
AUTH0_AUDIENCE=https://cmmc-scout-api
AUTH0_CALLBACK_URL=http://localhost:8000/auth/callback

# Comet ML Observability
COMET_API_KEY=your_comet_api_key_here
COMET_PROJECT_NAME=cmmc-scout
COMET_WORKSPACE=your_workspace_name

# LLM Provider (uncomment one)
# OpenAI
OPENAI_API_KEY=sk-xxx
# OR Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-xxx

# Database
DATABASE_URL=postgresql://cmmc:cmmc@localhost:5432/cmmc_scout

# Redpanda (Kafka-compatible)
REDPANDA_BOOTSTRAP_SERVERS=localhost:19092

# Application Config
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ENVIRONMENT=development
DEBUG=true

# Optional: Fallback settings
ENABLE_REDPANDA_FALLBACK=true
FALLBACK_EVENT_LOG_PATH=./logs/events.jsonl
